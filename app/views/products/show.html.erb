<section class="product-show">
  <h1><%= @product.name %></h1>
  <h2><%= number_to_currency(@product.price_in_cents/100) %></h2>
  <%= image_tag(@product.url, class: "picture") %>
  <p><%= @product.description %></p>
  <p><%= link_to("Back", products_url) %> | <%= link_to("Edit", edit_product_url) %> | <%= link_to("Delete", product_url(@product.id), method: :delete, data: {confirm: "Are you sure you want to delete #{@product.name}?"}) %>
  </p>

</section>
<section class="new-comment">
  <%= form_for [@product, @review] do |r| %>
  <p>
    <%= r.label :name %>
    <%= r.text_field :name %>
  </p>
  <p>
    <%= r.label :comment %>
    <%= r.text_field :comment %>
  </p>
  <p>
    <%= r.submit %>
  </p>
  <% end %>
</section>
<section class="comments">
  <% @reviews.each do |review| %>
    <%= review.name %>
    <%= review.comment %>
    <%= link_to("Delete", product_review_path([@product.id, @review.id]), method: :delete, data: {confirm: "Are you sure you want to delete this review?"}) %>
  <% end %>
</section>
