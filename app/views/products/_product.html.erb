<%= form_for product do |f| %>

<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>

<p>
  <%= f.label :description %>
  <%= f.text_field :description %>
</p>

<p>
  <%= f.label :price %>
  <%= f.number_field :price_in_cents %>
</p>

<p>
  <%= f.label :url %>
  <%= f.text_field :url %>
</p>

<p>
  <%= f.submit %>
</p>

<% end %>
